<%- include('../partials/header') %>
<h3> </h3>
<div> Add Ticket with your Seat Number and Price:</div>

<h3>Added Seats</h3>

<section id="badge-container">
  <% tickets.forEach(function(t) { %>
    <article class="badge"><%= t.seat %></article>
  <% }) %>
</section>
<h3> </h3>
<form id="add-ticket-form" action="/flights/<%=flightId%>/tickets" method="POST">
  <label>Seat: A-F, 1-9</label>
  <input name="seat" required pattern="[A-F][1-9]\d?">
  <label>Price:</label>
  <input type="price" name="price">
  

  <input type="submit" value="Add Ticket">
</form>

<%- include('../partials/footer') %>
